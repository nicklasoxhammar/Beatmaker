<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@android:color/background_dark"
    tools:context="com.oxhammar.nick.beatmaker.activities.MainActivity">

    <include
        android:id="@+id/toolbar"
        layout="@layout/toolbar" />

    <RelativeLayout
        android:id="@+id/metronomeContainer"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:visibility="visible"
        android:layout_below="@id/toolbar">

        <Button
            android:id="@+id/metronomeButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_margin="5dp"
            android:background="@drawable/metronome_start_button"
            android:onClick="startMetronome"
            android:text="120"
            android:textSize="20dp"

            android:textColor="@android:color/background_light" />


        <SeekBar
            android:id="@+id/bpmSlider"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_alignStart="@+id/bpmsliderstart"
            android:layout_centerVertical="true"
            android:layout_marginRight="5dp"
            android:progressBackgroundTint="@color/pink" />

        <Button
            android:id="@+id/bpmsliderstart"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_toEndOf="@+id/metronomeButton"
            android:alpha="0"
            android:clickable="false"
             />

    </RelativeLayout>

    <GridLayout
        android:id="@+id/standardDrumKitLayout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/metronomeContainer"
        android:tag="standardDrumKit"
        android:visibility="visible">


        <Button
            android:id="@+id/standardcrash"
            android:layout_marginTop="5dp"
            android:layout_marginLeft="5dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_column="0"
            android:layout_columnWeight="1"
            android:layout_gravity="fill"
            android:layout_row="0"
            android:layout_rowWeight="1"
            android:background="@drawable/blue_button"
            android:soundEffectsEnabled="false"
            android:tag="1"
             />

        <Button
            android:id="@+id/standardrimshot"
            android:layout_marginTop="5dp"
            android:layout_marginLeft="5dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_column="1"
            android:layout_columnWeight="1"
            android:layout_gravity="fill"
            android:layout_row="0"
            android:layout_rowWeight="1"
            android:background="@drawable/green_button"
            android:soundEffectsEnabled="false"
            android:tag="2"
             />

        <Button
            android:id="@+id/standardride"
            android:layout_marginTop="5dp"
            android:layout_marginLeft="5dp"
            android:layout_marginRight="5dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_column="2"
            android:layout_columnWeight="1"
            android:layout_gravity="fill"
            android:layout_row="0"
            android:layout_rowWeight="1"
            android:background="@drawable/purple_button"
            android:soundEffectsEnabled="false"
            android:tag="3"
            />

        <Button
            android:id="@+id/standardtom1"
            android:layout_marginTop="5dp"
            android:layout_marginLeft="5dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_column="0"
            android:layout_columnWeight="1"
            android:layout_gravity="fill"
            android:layout_row="1"
            android:layout_rowWeight="1"
            android:background="@drawable/pink_button"
            android:soundEffectsEnabled="false"
            android:tag="4"
             />
        <Button
            android:id="@+id/standardtom2"
            android:layout_marginTop="5dp"
            android:layout_marginLeft="5dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_column="1"
            android:layout_columnWeight="1"
            android:layout_gravity="fill"
            android:layout_row="1"
            android:layout_rowWeight="1"
            android:background="@drawable/red_button"
            android:soundEffectsEnabled="false"
            android:tag="5"
            />
        <Button
            android:id="@+id/standardtom3"
            android:layout_marginTop="5dp"
            android:layout_marginLeft="5dp"
            android:layout_marginRight="5dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_column="2"
            android:layout_columnWeight="1"
            android:layout_gravity="fill"
            android:layout_row="1"
            android:layout_rowWeight="1"
            android:background="@drawable/yellow_button"
            android:soundEffectsEnabled="false"
            android:tag="6"
            />
        <Button
            android:id="@+id/standardhihat"
            android:layout_marginTop="5dp"
            android:layout_marginLeft="5dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_column="0"
            android:layout_columnWeight="1"
            android:layout_gravity="fill"
            android:layout_row="2"
            android:layout_rowWeight="1"
            android:background="@drawable/darkblue_button"
            android:soundEffectsEnabled="false"
            android:tag="7"
            />
        <Button
            android:id="@+id/standardsnare"
            android:layout_marginTop="5dp"
            android:layout_marginLeft="5dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_column="1"
            android:layout_columnWeight="1"
            android:layout_gravity="fill"
            android:layout_row="2"
            android:layout_rowWeight="1"
            android:background="@drawable/orange_button"
            android:soundEffectsEnabled="false"
            android:tag="8"
        />
        <Button
            android:id="@+id/standardkick"
            android:layout_marginTop="5dp"
            android:layout_marginLeft="5dp"
            android:layout_marginRight="5dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_column="2"
            android:layout_columnWeight="1"
            android:layout_gravity="fill"
            android:layout_row="2"
            android:layout_rowWeight="1"
            android:background="@drawable/turquoise_button"
            android:soundEffectsEnabled="false"
            android:tag="9"
            />


    </GridLayout>

    <GridLayout
        android:id="@+id/trapKitLayout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/metronomeContainer"
        android:visibility="visible"
        android:background="@drawable/trap_background"
        android:tag="trapKit"
        >

        <Button
            android:id="@+id/trapgunshot"
            android:layout_marginTop="5dp"
            android:layout_marginLeft="5dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_column="0"
            android:layout_columnWeight="1"
            android:layout_gravity="fill"
            android:layout_row="0"
            android:layout_rowWeight="1"
            android:background="@drawable/blue_button"
            android:soundEffectsEnabled="false"
            android:tag="1"
            />

        <Button
            android:id="@+id/trapambience"
            android:layout_marginTop="5dp"
            android:layout_marginLeft="5dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_column="1"
            android:layout_columnWeight="1"
            android:layout_gravity="fill"
            android:layout_row="0"
            android:layout_rowWeight="1"
            android:background="@drawable/green_button"
            android:soundEffectsEnabled="false"
            android:tag="2"
            />

        <Button
            android:id="@+id/trapguncock"
            android:layout_marginTop="5dp"
            android:layout_marginLeft="5dp"
            android:layout_marginRight="5dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_column="2"
            android:layout_columnWeight="1"
            android:layout_gravity="fill"
            android:layout_row="0"
            android:layout_rowWeight="1"
            android:background="@drawable/purple_button"
            android:soundEffectsEnabled="false"
            android:tag="3"
            />

        <Button
            android:id="@+id/traptom1"
            android:layout_marginTop="5dp"
            android:layout_marginLeft="5dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_column="0"
            android:layout_columnWeight="1"
            android:layout_gravity="fill"
            android:layout_row="1"
            android:layout_rowWeight="1"
            android:background="@drawable/pink_button"
            android:soundEffectsEnabled="false"
            android:tag="4"
            />
        <Button
            android:id="@+id/traptom2"
            android:layout_marginTop="5dp"
            android:layout_marginLeft="5dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_column="1"
            android:layout_columnWeight="1"
            android:layout_gravity="fill"
            android:layout_row="1"
            android:layout_rowWeight="1"
            android:background="@drawable/red_button"
            android:soundEffectsEnabled="false"
            android:tag="5"
            />
        <Button
            android:id="@+id/traptom3"
            android:layout_marginTop="5dp"
            android:layout_marginLeft="5dp"
            android:layout_marginRight="5dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_column="2"
            android:layout_columnWeight="1"
            android:layout_gravity="fill"
            android:layout_row="1"
            android:layout_rowWeight="1"
            android:background="@drawable/yellow_button"
            android:soundEffectsEnabled="false"
            android:tag="6"
            />
        <Button
            android:id="@+id/traphihat"
            android:layout_marginTop="5dp"
            android:layout_marginLeft="5dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_column="0"
            android:layout_columnWeight="1"
            android:layout_gravity="fill"
            android:layout_row="2"
            android:layout_rowWeight="1"
            android:background="@drawable/darkblue_button"
            android:soundEffectsEnabled="false"
            android:tag="7"
            />
        <Button
            android:id="@+id/trapsnare"
            android:layout_marginTop="5dp"
            android:layout_marginLeft="5dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_column="1"
            android:layout_columnWeight="1"
            android:layout_gravity="fill"
            android:layout_row="2"
            android:layout_rowWeight="1"
            android:background="@drawable/orange_button"
            android:soundEffectsEnabled="false"
            android:tag="8"
            />
        <Button
            android:id="@+id/trapkick"
            android:layout_marginTop="5dp"
            android:layout_marginLeft="5dp"
            android:layout_marginRight="5dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_column="2"
            android:layout_columnWeight="1"
            android:layout_gravity="fill"
            android:layout_row="2"
            android:layout_rowWeight="1"
            android:background="@drawable/turquoise_button"
            android:soundEffectsEnabled="false"
            android:tag="9"
            />

    </GridLayout>


</RelativeLayout>
